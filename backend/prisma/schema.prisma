// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String  @id @default(uuid())
  name      String
  gameId    String?
  metadata  String?

  // Relation
  game      Game?   @relation(fields: [gameId], references: [id])
}

model Game {
  id       String   @id @default(uuid())
  state    String
  roomId   String   @default(uuid())
  roomUrl  String
  users    User[]
  winner   String?
  gameCode String
}

